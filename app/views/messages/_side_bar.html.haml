.Side-bar
  .Side-bar__user-name
    .Top-items
      %h3.Top-items__name
        = current_user.name
      %ul.Top-items__icons
        %li.list
        = link_to new_group_path, class: "Side-bar__btn" do
          = icon('far', 'edit', class: 'strong')
        = link_to  edit_user_path(current_user), class: "Side-bar__btn" do
          = icon('fas', 'cog')
  .Side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
